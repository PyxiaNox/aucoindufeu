{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié ou perdu - Au Coin du Feu{% endblock %}

{% block content %}

    <div class="block-small">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <form method="post">
            <br>
            <h3 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h3>
            <label for="inputEmail">Adresse mail</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre adresse mail" required autofocus>

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <br>
            <button type="submit" class="btn btn-dark btn-lg btn-sm btn-block" style="color: #CFB53B">
                <strong>Valider</strong>
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter ?</a></p>
        </form>
    </div>

{% endblock %}
