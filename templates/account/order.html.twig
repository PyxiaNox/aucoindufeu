{% extends 'base.html.twig' %}

{% block title %}Mes commandes - Au Coin du Feu{% endblock %}

{% block content %}

    <br>
    <h1>Mes commandes</h1>
    Bienvenue {{ app.user.firstname }}.
    <br>
    C'est dans cet espace que vous pouvez voir toutes vos commandes.
    <hr>
    <a href="{{ path('account') }}">Retour</a>
    {% if orders|length == 0 %}
        <p class="text-center">Vous n'avez pas encore passé de commande sur le site Au Coin du Feu.</p>
    {% else %}
        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th scope="col">N° commande</th>
                <th scope="col">Date</th>
                <th scope="col">Statut</th>
                <th scope="col">Produit(s)</th>
                <th scope="col">Total</th>
                <th scope="col">Détail de la commande</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
            <tr>
                <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                <td>{{ order.createAt|date('d/m/Y') }}</td>
                <td>{% if order.state == 1 %}
                        Paiement accepté
                    {% elseif order.state == 2 %}
                        Préparation en cours
                    {% else order.state == 3 %}
                        Livraison en cours
                    {% endif %}</td>
                <td>{{ order.orderDetails|length }}</td>
                <td>{{ ((order.carrierPrice + order.getTotal) / 100)|number_format(2) }} €</td>
                <td class="text-right"><a href="{{ path('account_order_show', { 'reference' : order.reference }) }}">Voir ma commande</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}