{% extends 'base.html.twig' %}

{% block title %}Mon compte - Au Coin du Feu{% endblock %}

{% block content %}

    <h3>Mon compte</h3>
    Bienvenue {{ app.user.firstname }}.
    <br>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin') }}">Tableau de bord - Administrateur</a>
    {% endif %}
    <br>
    C'est dans cet espace que vous pouvez gérer vos informations personnelles.
    <br>
    <hr>

    <div class="row">

        <div class="col-md-4 text-center">
            <div class="account-item">
                <img src="{{ asset('assets/img/icon/password.png') }}" alt="Modifier mon mot de passe" height="30px" width="30px">
                <br>
                <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="account-item">
                <img src="{{ asset('assets/img/icon/adress.png') }}" alt="Gérer mes adresses" height="30px" width="30px">
                <br>
                <a href="{{ path('account_adress') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="account-item">
                <img src="{{ asset('assets/img/icon/cart.png') }}" alt="Gérer mes commandes" height="30px" width="30px">
                <br>
                <a href="{{ path('account_order') }}">Gérer mes commandes</a>
            </div>
        </div>

    </div>

    <hr>

{% endblock %}
