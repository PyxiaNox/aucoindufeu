{% extends 'base.html.twig' %}
{% block stripescript %}<script src="https://js.stripe.com/v3/"></script>{% endblock %}
{% block title %}Paiement - Au Coin du Feu{% endblock %}

{% block content %}
    <h2>Récapitulatif de commande</h2>
    <p>Vérifiez vos informations avant de payer votre commande.</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <strong>Mon adresse de livraison</strong>
            <br>
            <div class="form-check mt-4">
                {{ delivery|raw }}
            </div>
            <hr>
            <strong>Mon transporteur</strong>
            <br>
            <div class="form-check mt-4">
                {{ carrier.name }}
                <br>
                {{ carrier.description }}
                <br>
                {{ (carrier.price/100)| number_format(2) }} €
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Ma commande</b>
            </div>
            <div class="order-summary">
                {% set total = null %}
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/img/{{ product.product.picture }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}
                            <br>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            {{ (product.product.price/100) | number_format(2) }} €
                        </div>
                    </div>
                    {% set total = total + (product.product.price) %}
                {% endfor %}
            </div>
                <hr>
                <strong>Livraison : </strong>{{ (carrier.price/100)| number_format(2) }} €
                <hr>
                <strong>Total : </strong>{{ (total/100) + (carrier.price/100) }} €
            <a class="btn btn-success btn-block mt-3" id="checkout-button">Payer {{ (total/100) + (carrier.price/100)| number_format(2) }} €</a>
        </div>
    </div>

{% endblock %}

