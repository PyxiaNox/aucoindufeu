{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Au Coin du Feu{% endblock %}

{% block content %}
    <br>
    <div class="row">

        <div class="col-md-5">
            <img src="{{ asset('assets/img/products/' ~ product.picture ) }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price/100) | number_format(2) }} â‚¬</span>
            <hr>
            <p style="text-align: justify">{{ product.description }}</p>
            <hr>

            <a href="{{ path('add-to-cart', { 'id' : product.id }) }}" class="btn btn-dark" style="color: #CFB53B" type="submit"><strong>Ajouter au panier</strong></a>

        </div>

    </div>
    <br>

{% endblock %}